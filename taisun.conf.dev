[supervisord]
nodaemon=true

[program:taisun]
directory=/usr/src/Taisun
command=/usr/local/bin/nodemon --legacy-watch app.js
autorestart=True
priority=1
startretries=0
stdout_logfile=/root/taisun.log
stdout_logfile_maxbytes=0
stderr_logfile=/root/taisun.log
stderr_logfile_maxbytes=0

[program:cloud9]
directory=/cloud9
environment=PATH=/root/.c9/node/bin/:/root/.c9/node_modules/.bin:%(ENV_PATH)s
command=node server.js --listen 0.0.0.0 -p 8000 -w /usr/src/Taisun -a :
autorestart=True
priority=2
startretries=0
